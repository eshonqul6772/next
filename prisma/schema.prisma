// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Role model
model Role {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  permissions String   // JSON string of permissions array
  status      String   @default("ACTIVE") // ACTIVE, INACTIVE, DELETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users User[]

  @@map("roles")
}

// User model
model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String   @default("")
  username  String   @unique
  password  String
  photoUrl  String?
  status    String   @default("ACTIVE") // ACTIVE, INACTIVE, DELETED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roleId Int?
  role   Role? @relation(fields: [roleId], references: [id])

  @@map("users")
}

// Translation model
model Translation {
  id     Int    @id @default(autoincrement())
  nameRu String
  nameUz String
  nameEn String
  tag    String @unique
  types  String // JSON string of cabinet types array
  status String @default("ACTIVE") // ACTIVE, INACTIVE, DELETED

  @@map("translations")
}

// ==================== FLOWER SHOP MODELS ====================

// Category model
model Category {
  id          Int      @id @default(autoincrement())
  nameRu      String
  nameUz      String
  nameEn      String
  slug        String   @unique
  description String?
  imageUrl    String?
  sortOrder   Int      @default(0)
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  flowers Flower[]

  @@map("categories")
}

// Flower model
model Flower {
  id          Int      @id @default(autoincrement())
  nameRu      String
  nameUz      String
  nameEn      String
  slug        String   @unique
  description String?
  price       Float
  oldPrice    Float?
  imageUrl    String?
  images      String?  // JSON array of image URLs
  inStock     Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  isNew       Boolean  @default(false)
  sortOrder   Int      @default(0)
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  @@map("flowers")
}

// Contact message model
model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String?
  message   String
  status    String   @default("NEW") // NEW, READ, REPLIED
  createdAt DateTime @default(now())

  @@map("contacts")
}

// Hero Slider model
model HeroSlide {
  id          Int      @id @default(autoincrement())
  titleRu     String
  titleUz     String
  titleEn     String
  subtitleRu  String?
  subtitleUz  String?
  subtitleEn  String?
  imageUrl    String
  buttonText  String?
  buttonLink  String?
  sortOrder   Int      @default(0)
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("hero_slides")
}

// Store Settings model
model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("settings")
}
